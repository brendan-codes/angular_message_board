<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>This is an awesome message board!</h1>

    <form action="/message/new" method="post">
      Name: <input type='text' name='name'><br>
      Message: <input type='text' name='message'><br>
      <input type='submit' value='Say some stuff!'><br>
    </form>
    <hr>

    <% for(var i in messages){ %>
      <div> Name: <%= messages[i].name %> </div>
      <div> Message: <%= messages[i].message %> </div>

      <% for(var comment of messages[i].comments){ %>
        <div> Name: <%= comment.name %> </div>
        <div> Comment: <%= comment.comment %> </div>

        <% } %>
      <form action="/comment/new" method="post">
        Name: <input type='text' name='name'><br>
        Comment: <input type='text' name='comment'><br>
        <input type='hidden' value='<%= messages[message]._id %>' name='_id'>
        <input type='submit' value='Comment stuff!'><br>
      </form>


      <hr>

  <%  } %>
  </body>
</html>
